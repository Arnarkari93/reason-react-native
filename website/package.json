{
  "private": true,
  "name": "reason-react-native-website",
  "version": "0.0.0",
  "scripts": {
    "svg:cleanup": "trash src/SVGs/components",
    "svg:convert": "react-from-svg src/SVGs src/SVGs/components",
    "svg:format": "find src/SVGs/components -name \"*.re\" | grep -v \"node_modules\" | xargs bsrefmt --in-place",
    "svg": "yarn svg:cleanup && yarn svg:convert && yarn svg:format",
    "re:clean": "bsb -clean-world",
    "re:start": "bsb -make-world -w",
    "re:build": "bsb -make-world",
    "re:clean-build": "yarn re:clean && yarn re:build",
    "build:prepare:md": "trash build/md && node scripts/PrepareMdToJson.bs.js",
    "build:prepare": "yarn build:prepare:md",
    "build:prerender": "node scripts/BuildWebsite.entry.js",
    "build:copy-static": "copyup \"public/**/*\" \"dist/reason-react-native\"",
    "build": "yarn svg && yarn re:build && yarn build:prepare && yarn build:prerender && yarn build:copy-static",
    "serve": "static-server-cli dist",
    "start": "opn http://localhost:9000/reason-react-native/ & yarn serve",
    "clean": "yarn re:clean",
    "test": "yarn svg && yarn re:clean-build"
  },
  "devDependencies": {
    "@moox/bs-react-helmet": "^2.0.0",
    "@phenomic/markdown-as-json": "^1.0.0",
    "bs-platform": "^5.0.4",
    "copyfiles": "^2.0.0",
    "glob": "^7.1.3",
    "mkdirp": "^0.5.1",
    "module-alias": "^2.2.0",
    "opn-cli": "^4.1.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-from-svg": "^0.2.0",
    "react-helmet": "^5.2.0",
    "react-multiversal": "https://github.com/MoOx/react-multiversal.git#1fe6971",
    "react-native-web": "^0.11.2",
    "reason-future": "^2.4.0",
    "reason-highlightjs": "^0.2.0",
    "reason-react": "^0.7.0",
    "static-server-cli": "^1.0.2",
    "trash-cli": "^1.4.0"
  }
}
